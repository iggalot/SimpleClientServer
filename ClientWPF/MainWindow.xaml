<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Name="btnConnect" Content="Connect" Width="100" Height="50" Click="Button_ConnectClick"></Button>
        <StackPanel Name="spConnectionActive" Visibility="Collapsed">
            <TextBox Name="SendMessage" Text="enter message" Width="250" Height="25" FontSize="18" HorizontalAlignment="Center"/>
            <Button Content="Send" Width="100" Height="50" Click="Button_SendClick"></Button>
            <TextBlock Name="ReceiveMessage" Text="..." Width="250" Height="25" FontSize="18" HorizontalAlignment="Center"/>
            <Button Content="Disconnect" Width="100" Height="50" Click="Button_DisconnectClick"></Button>
        </StackPanel>
    </StackPanel>
</Window>
